#!/usr/bin/env bash
# Remove all ssh keys currently in use, and add the specified key.

ARG1=$1

if [[ $ARG1 = '-h' || $ARG1 = '--help' ]]; then
	echo "    Remove all ssh keys currently in use, and add the specified key in $HOME/.ssh"
	echo "    Example: ssh-sw id_rsa"
else
	ssh-add -D
	ssh-add $HOME/.ssh/"$1"
fi

