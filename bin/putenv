#!/bin/bash

SOURCE_FILE1="$HOME/.shexports"

if [[ $1 = '-h' || $1 = '--help' ]]; then
	echo "    Save an environment variable to file"
	echo "        - $SOURCE_FILE1"
	echo "    Example: putenv IP_AMAZON_EC2 127.0.0.1"
	echo "    Then use `refenv` to refresh variables in other shell instances."
else
	echo "export ${1}=\"${2}\"" >> $SOURCE_FILE1
	source $SOURCE_FILE1
fi