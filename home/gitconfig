[merge]
  conflictstyle = diff3
  tool = meld
[alias]
  lgraph = log --graph --pretty=format:\"%Cblue%h%Creset - %s - %Cred%an%Creset - %Cgreen%ar\"
  unstage = reset HEAD --
  unmodify = checkout --
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[diff]
  tool = vimdiff
[difftool "opendiff"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
